  <body>
    
    <div class="logmod">
  <div class="logmod__wrapper">
    <!--<span class="logmod__close">Close</span>-->
    <div class="logmod__container">
      <ul class="logmod__tabs">
        <li data-tabtar="lgm-2"><a href="#">Entrar</a></li>
        <li data-tabtar="lgm-1"><a href="#">Cadastrar</a></li>
      </ul>
      <div class="logmod__tab-wrapper">
      <div class="logmod__tab lgm-1">
        <div class="logmod__heading">
          <span class="logmod__heading-subtitle">Informe seus dados pessoais <strong>para criar uma conta</strong></span>
        </div>
        <div class="logmod__form">
            
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {multipart: true, role: "form", class: "form-horizontal simform"}) do |f| %>
            <%= devise_error_messages! %>
            
          <!--<form accept-charset="utf-8" action="<%= registration_path(resource_name)%>" method="POST" class="simform">-->
          
            <div class="sminputs">
              <div class="input full">
                    <%= f.label :name, "NOME", class: "string optional"  %>
                    <%= f.text_field :name, class: "string optional" , size: 50, maxlength:255, autofocus: true, required: true, placeholder: "informe seu nome" %>
              </div>
            </div>
            
            <div class="sminputs">
              <div class="input string optional">
                <!--<%= label_tag :tipo %>-->
                <%= label_tag :tipo, "Professor", :value => "prof"  %>
                <%= radio_button_tag :tipo, true %>
                
              </div>
              
              <div class="input string optional">
                <%= label_tag :tipo, "Aluno", :value => "aluno" %>
                <%= radio_button_tag :tipo, false, :checked => true %>
              </div>
              
            </div>
          
            <div class="sminputs">
              <div class="input full">
                    <%= f.label :email, class: "string optional"  %>
                    <%= f.email_field :email, class: "string optional" , size: 50, maxlength:255, autofocus: true, required: true, placeholder: "informe seu e-mail" %>
                <!--<label class="string optional" for="user-name">Email*</label>-->
                <!--<input class="string optional" maxlength="255" id="user-email" placeholder="Email" type="email" size="50" />-->
              </div>
            </div>
            <div class="sminputs">
              <div class="input string optional">
                  
                    <%= f.label :password, "SENHA", class: "string optional"   %>
                    <%= f.password_field :password,  class: "string optional" ,  size: 50, maxlength:255,  autocomplete: "off", placeholder: "informe sua senha"%>
              </div>
              <div class="input string optional">
                  <%= f.label :password_confirmation, "CONFIRME A SENHA", class: "string optional"   %>
                  <%= f.password_field :password_confirmation, class: "string optional" , autocomplete: "off", placeholder: "confirme sua senha" %>
                <!--<label class="string optional" for="user-pw-repeat">Comfirme a senha *</label>-->
                <!--<input class="string optional" maxlength="255" id="user-pw-repeat" placeholder="confirme a senha" type="text" size="50" />-->
              </div>
            </div>
            
            <div class="actions simform__actions">
              <%= f.submit "CRIAR CONTA", class: "btn btn-success btn-block" %>
              <span class="simform__actions-sidetext centered">Ao me cadastrar, confirmo que li e concordo com os <a class="special" href="/pages/termos" target="_blank" role="link">Termos de Uso</a></span>
            </div>
            
            <!--<div class="simform__actions">-->
            <!--  <input class="sumbit" name="commit" type="sumbit" value="CRIAR CONTA" />-->
            <!--  <span class="simform__actions-sidetext">Ao me cadastrar, confirmo que li e concordo com os <a class="special" href="#" target="_blank" role="link">Termos de Uso</a></span>-->
            <!--</div> -->
          <!--</form>-->
          
          <% end %>
        </div> 
