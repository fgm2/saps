      </div>
      <div class="logmod__tab lgm-2">
        <div class="logmod__heading">
          <span class="logmod__heading-subtitle">Informe seu e-mail e senha <strong>para entrar</strong></span>
        </div> 
        <div class="logmod__form">
            
            <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {multipart: true, role: "form", class: "simform"}) do |f| %>
            
          <!--<form accept-charset="utf-8" action="<%= new_user_session_path(resource_name)%>" method="POST" class="simform">-->
          
            <div class="sminputs">
              <div class="input full">
                  <%= f.label :email, class: "string optional"  %>
                  <%= f.email_field :email, class: "string optional" , autofocus: true %>
                  
                <!--<label class="string optional" for="user-name">Email*</label>-->
                <!--<input class="string optional" maxlength="255" id="user-email" placeholder="Email" type="email" size="50" />-->
              </div>
            </div>
            <div class="sminputs">
              <div class="input full">
                  
                  <%= f.label :password, "SENHA", class: "string optional"  %>
                  <%= f.password_field :password, class: "string optional" , autocomplete: "off" %>
                <!--<label class="string optional" for="user-pw">Senha *</label>-->
                <!--<input class="string optional" maxlength="255" id="user-pw" placeholder="Password" type="password" size="50" />-->
                						<span class="hide-password">Show</span>
              </div>
            </div>
            <div class="simform__actions">
                
                <% if devise_mapping.rememberable? -%>
                      <%= f.check_box :remember_me, class: "string optional"  %>
                      <%= f.label :remember_me, class: "string optional"  %>
                <% end -%>
                
                  <div class="simform__actions">
                    <%= f.submit "ENTRAR", class: "btn btn-success btn-block"  %>
                  </div>
                  
              <!--<input class="sumbit" name="commit" type="sumbit" value="ENTRAR" />-->
              <span class="simform__actions-sidetext"><a class="special" role="link" href="#">Esqueceu sua senha?<br>Clique aqui</a></span>
            </div> 
          <!--</form>-->
          <% end -%>
