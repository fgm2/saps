

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {multipart: true, role: "form", class: "form-horizontal"}) do |f| %>
  <%= devise_error_messages! %>
  <div  class="register-form">
    
    <div id="form-title">
      <h2>Crie sua conta Gr√°tis</h2>
    </div>
    
      <div class="form-group">
          <%= f.label :nome, class: "control-label" %><br />
            <%= f.text_field :name, class: "form-control" , size: 35, autofocus: true, required: true, placeholder: "Nome e Sobrenome" %>
            <%= f.label :email, class: "control-label"  %><br />
            <%= f.email_field :email, class: "form-control" , size: 35, autofocus: true, required: true, placeholder: "informe seu e-mail" %>
      </div>
      
        <div class="form-group passwords-div">
          <div class="field" style="float:left width:50%">
