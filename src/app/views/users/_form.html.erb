<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container">
    <div class="row">
        <h2> Meu perfil</h2>
          <% if ( notice.try )%>
            <div class="alert alert-danger">
              <p id="notice"><%= notice %></p>  
            </div>
          <% end %>
    </div>
    <div class="row">
        <form role="form" method="PUT" action="<%= "/users/#{current_user.id}" %>">
            <div class="row well">
                <p><strong>DADOS DO USUÁRIO</strong></p>
                <hr>
                <div class="col-md-6">
                    <div class="col-md-5">
                        <%= (image_tag current_user.avatar.url(:thumb), class: 'avatar') %> <br>
                        <br>
                        <div class="col-md-3">
                            <span class="btn btn-primary btn-file"><%= f.file_field :avatar, :title => 'tes',:class =>"col-md-1"%></span>
                        </div>
                    </div>
                    <div class="col-md-7">
                        <div class="form-group">
                            <label for="name">Nome:</label>
                            <input type="text" required class="form-control" id="name" name="user[name]" value="<%= current_user.name %>">
                        </div>
                        <div class="form-group">
                            <label for="escolaridade">Escolaridade:</label>
                            <input type="text" required class="form-control" id="scholarity" name="user[scholarity]" value="<%= current_user.scholarity %>">
                        </div>
                        <div class="form-group">
                            <label for="address">Endereço:</label>
                            <input type="text" required class="form-control" id="address" name="user[addrress]" value="<%= current_user.addrress %>">
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="state">Estado:</label>
                                <input type="text" required class="form-control" id="state" name="user[state]" value="<%= current_user.state %>">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="country">País:</label>
                                <input type="text" required class="form-control" id="country" name="user[country]" value="<%= current_user.country %>">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="col-md-12 well">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="country">Data de Nascimento:</label>
                                    <input type="date" required class="form-control" id="date_of_birth" name="user[date_of_birth]" value="<%= current_user.date_of_birth %>">
                                </div>
                                <div class="form-group">
                                    <label for="cpf">CPF:</label>
                                    <input type="text" required  class="form-control" id="cpf" name="user[cpf]" value="<%= current_user.cpf %>">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="fone">Telefone:</label>
                                    <input type="text" required class="form-control" id="fone" name="user[fone]" value="<%= current_user.fone %>">
                                </div>
                                <div class="form-group">
                                    <label for="email">E-mail:</label>
                                    <input type="text" required class="form-control" id="email" name="user[email]" value="<%= current_user.email %>">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 well">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="whatsapp">Whatsapp:</label>
                                    <input type="text" required class="form-control" id="whatsapp" name="user[whatsapp]" value="<%= current_user.whatsapp %>">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="skype">Skype:</label>
                                    <input type="text" required class="form-control" id="skype" name="user[skype]" value="<%= current_user.skype %>">
                                </div>
                            </div>
                        </div>
                        <%= hidden_field_tag "user[id]", current_user.id -%>
                        <%= hidden_field_tag :id, current_user.id -%>
                        <%= hidden_field_tag :authenticity_token, form_authenticity_token -%> 
                </div>
                <div class="col-md-12" align="center">
                    <%= button_tag "Salvar", :name => "commit",:class => "btn btn-success btn-block", :type => 'submit', :controller => 'Users', :action=>'update'%>
                    <!--<button type="submit" class="btn btn-success btn-block" style="width: 90%; margin-left: 30px;" align="center" >-->
                    <!--Salvar as alterações!-->
                    <!--</button>-->
                </div>
            </div>
        </form>
    </div>
    
    <div class="row">
        
    </div>
    <br>
 </div>
  
<% end %>
